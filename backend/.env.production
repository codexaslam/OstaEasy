# Production Environment Variables for Django Backend
# This file is used for production deployment (Render, Heroku, etc.)

# Django Settings (Production)
DEBUG=False
ALLOWED_HOSTS=ostaeasy.onrender.com,localhost,127.0.0.1

# Database Configuration (Production PostgreSQL via DATABASE_URL)
# DATABASE_URL will be provided by Render automatically
# DB_ENGINE, DB_NAME, etc. are ignored when DATABASE_URL is present

# JWT Settings (Production)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# CORS Settings (Production Frontend URLs)
FRONTEND_URL=https://ostaeasy.netlify.app
FRONTEND_URL_ALT=https://ostaeasy.netlify.app/
CORS_ALLOW_ALL_ORIGINS=False

# Stripe Settings (Production Keys - Set these in Render Environment Variables)
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_key
# STRIPE_SECRET_KEY=sk_live_your_live_key

# Render Specific
# RENDER_EXTERNAL_HOSTNAME=ostaeasy.onrender.com

# Environment Type
ENVIRONMENT=production

# Email settings for production
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis settings (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# AWS S3 settings (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=your-region
